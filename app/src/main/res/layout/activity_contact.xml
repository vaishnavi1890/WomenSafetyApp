<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #ffe6ff"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_above="@+id/bottomLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="316dp"
        android:layout_marginBottom="-261dp"
        android:src="@drawable/backarrow" />

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/top_left_oval"/>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>

    <ImageView
        android:id="@+id/editCallButton"
        android:layout_width="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_above="@id/bottomLayout"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="228dp">

        <EditText
            android:id="@+id/contactGet"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/addContact"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="10dp"
            android:hint="Number"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nameGet"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/addContact"
            android:layout_marginTop="-62dp"
            android:layout_marginEnd="10dp"
            android:hint="Name"
            android:inputType="text"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="36dp"
            android:layout_toRightOf="@id/contactGet"
            android:background="@drawable/btn_bg"
            android:backgroundTint="#803A99"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="247dp"
        android:layout_height="191dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="511dp"
        app:srcCompat="@drawable/login" />


    <Button
        android:id="@+id/viewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="-29dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="47dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#803A99"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="View contact"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="452dp"
        android:text="Emergency Contacts :"
        android:textColor="#803A99"
        android:textSize="28sp"
        android:textStyle="bold" />







</RelativeLayout>
